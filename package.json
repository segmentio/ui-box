{
  "name": "ui-box",
  "version": "1.4.0",
  "description": "Blazing Fast React UI Primitive",
  "contributors": [
    "Jeroen Ransijn (https://twitter.com/jeroen_ransijn)",
    "Roland Warmerdam (https://roland.codes)",
    "Meichen Zhou (https://github.com/jfmaggie)",
    "Netto Farah (https://twitter.com/nettofarah)",
    "Matt Shwery (https://github.com/mshwery)"
  ],
  "keywords": [
    "react"
  ],
  "repository": "segmentio/ui-box",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "test": "yarn run tslint && xo && nyc ava",
    "tslint": "tslint -c tslint.json 'src/**/*.ts'",
    "prepublishOnly": "rm -rf lib && yarn run build",
    "dev": "start-storybook -p 9009",
    "build": "tsc",
    "build-storybook": "build-storybook -s .storybook/static -o .out",
    "release": "np --no-publish",
    "benchmark": "echo ui-box && react-benchmark tools/benchmarks/box.js",
    "size": "size-limit",
    "coverage": "nyc report --reporter=html"
  },
  "dependencies": {
    "@emotion/hash": "^0.7.1",
    "inline-style-prefixer": "^5.0.4",
    "prop-types": "^15.7.2"
  },
  "peerDependencies": {
    "react": "^16.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/plugin-proposal-class-properties": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "@storybook/react": "^5.0.1",
    "@storybook/storybook-deployer": "^2.8.1",
    "ava": "^1.3.1",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.10.0",
    "eslint-config-xo-react": "^0.19.0",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-react-hooks": "^1.5.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "nyc": "^13.3.0",
    "react": "^16.8.4",
    "react-benchmark": "^2.1.0",
    "react-dom": "^16.8.4",
    "react-test-renderer": "^16.8.4",
    "sinon": "^7.2.7",
    "size-limit": "^0.21.1",
    "xo": "^0.24.0"
  },
  "xo": {
    "parser": "babel-eslint",
    "extends": "xo-react",
    "envs": [
      "node",
      "browser"
    ],
    "ignores": [
      "**/*.ts",
      "**/*.tsx"
    ],
    "prettier": true,
    "space": true,
    "semicolon": false,
    "rules": {
      "react/jsx-sort-props": [
        "error",
        {
          "callbacksLast": false,
          "shorthandFirst": false,
          "noSortAlphabetically": true,
          "reservedFirst": true
        }
      ]
    },
    "settings": {
      "react": {
        "version": "16.5.0"
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "xo --fix",
      "git add"
    ]
  },
  "size-limit": [
    {
      "path": "lib/src/index.js",
      "limit": "19 KB"
    }
  ],
  "ava": {
    "require": [
      "ts-node/register",
      "./test/_setup"
    ],
    "compileEnhancements": false,
    "extensions": [
      "ts",
      "tsx"
    ]
  }
}
