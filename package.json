{
  "name": "ui-box",
  "version": "1.4.0",
  "description": "Blazing Fast React UI Primitive",
  "contributors": [
    "Jeroen Ransijn (https://twitter.com/jeroen_ransijn)",
    "Roland Warmerdam (https://roland.codes)",
    "Meichen Zhou (https://github.com/jfmaggie)",
    "Netto Farah (https://twitter.com/nettofarah)",
    "Matt Shwery (https://github.com/mshwery)"
  ],
  "keywords": [
    "react"
  ],
  "repository": "segmentio/ui-box",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "test": "yarn run tslint && xo && nyc ava",
    "tslint": "tslint -c tslint.json 'src/**/*.ts'",
    "prepublishOnly": "rm -rf lib && yarn run build",
    "precommit": "lint-staged",
    "dev": "start-storybook -p 9009",
    "build": "tsc",
    "build-storybook": "build-storybook -s .storybook/static -o .out",
    "release": "np --no-publish",
    "benchmark": "echo ui-box && react-benchmark tools/benchmarks/box.js",
    "size": "size-limit",
    "coverage": "nyc report --reporter=html"
  },
  "dependencies": {
    "inline-style-prefixer": "^5.0.1",
    "murmurhash-js": "^1.0.0",
    "prop-types": "^15.6.0"
  },
  "peerDependencies": {
    "react": "^16.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@storybook/react": "^4.1.4",
    "@storybook/storybook-deployer": "^2.2.0",
    "@types/enzyme": "^3.1.15",
    "@types/inline-style-prefixer": "^5.0.0",
    "@types/murmurhash-js": "^1.0.3",
    "@types/prop-types": "^15.5.8",
    "@types/react": "^16.8.16",
    "@types/react-dom": "^16.8.4",
    "@types/react-test-renderer": "^16.0.3",
    "@types/sinon": "^7.0.3",
    "@types/storybook__react": "^4.0.1",
    "ava": "^1.0.1",
    "awesome-typescript-loader": "^5.2.1",
    "babel-eslint": "^9.0.0",
    "babel-loader": "^8.0.4",
    "csstype": "^2.6.0",
    "enzyme": "^3.4.1",
    "enzyme-adapter-react-16": "^1.2.0",
    "eslint-config-xo-react": "^0.17.0",
    "eslint-plugin-react": "^7.10.0",
    "esm": "^3.2.22",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.2",
    "nyc": "^13.0.1",
    "react": "^16.4.2",
    "react-benchmark": "^1.1.0",
    "react-docgen-typescript-loader": "^3.0.0",
    "react-dom": "^16.4.2",
    "react-test-renderer": "^16.4.2",
    "sinon": "^6.1.5",
    "size-limit": "^0.20.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.0",
    "tslint-react": "^3.6.0",
    "tslint-xo": "^0.11.0",
    "typescript": "^3.2.2",
    "xo": "^0.23.0"
  },
  "xo": {
    "parser": "babel-eslint",
    "extends": "xo-react",
    "envs": [
      "node",
      "browser"
    ],
    "ignores": [
      "**/*.ts",
      "**/*.tsx"
    ],
    "prettier": true,
    "space": true,
    "semicolon": false,
    "rules": {
      "react/jsx-sort-props": [
        "error",
        {
          "callbacksLast": false,
          "shorthandFirst": false,
          "noSortAlphabetically": true,
          "reservedFirst": true
        }
      ]
    },
    "settings": {
      "react": {
        "version": "16.5.0"
      }
    }
  },
  "lint-staged": {
    "*.js": [
      "xo --fix",
      "git add"
    ]
  },
  "size-limit": [
    {
      "path": "lib/src/index.js",
      "limit": "19 KB"
    }
  ],
  "ava": {
    "require": [
      "ts-node/register",
      "./test/_setup"
    ],
    "compileEnhancements": false,
    "extensions": [
      "ts",
      "tsx"
    ]
  }
}
