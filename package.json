{
  "name": "ui-box",
  "version": "4.0.0-0",
  "description": "Blazing Fast React UI Primitive",
  "contributors": [
    "Jeroen Ransijn (https://twitter.com/jeroen_ransijn)",
    "Roland Warmerdam (https://roland.codes)",
    "Meichen Zhou (https://github.com/jfmaggie)",
    "Netto Farah (https://twitter.com/nettofarah)",
    "Matt Shwery (https://github.com/mshwery)"
  ],
  "keywords": [
    "react"
  ],
  "repository": "segmentio/ui-box",
  "license": "MIT",
  "main": "dist/src/index.js",
  "typings": "dist/src/index.d.ts",
  "files": [
    "dist/src"
  ],
  "engines": {
    "node": ">=10.18"
  },
  "sideEffects": false,
  "scripts": {
    "test": "yarn lint && ava",
    "lint": "eslint 'src/**/*.{js,ts,tsx}'",
    "prepublishOnly": "rm -rf dist && yarn run build",
    "dev": "start-storybook -p 9009",
    "build": "tsc",
    "build-storybook": "build-storybook -s .storybook/static -o .out",
    "release": "np",
    "benchmark": "echo ui-box && react-benchmark dist/tools/benchmarks/box.js",
    "size": "size-limit"
  },
  "dependencies": {
    "@emotion/hash": "^0.8.0",
    "inline-style-prefixer": "^6.0.0",
    "prop-types": "^15.7.2"
  },
  "peerDependencies": {
    "react": "^16.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@size-limit/preset-big-lib": "^4.5.4",
    "@storybook/react": "^5.3.19",
    "@storybook/storybook-deployer": "^2.8.6",
    "@types/enzyme": "^3.10.5",
    "@types/inline-style-prefixer": "^5.0.0",
    "@types/prop-types": "^15.7.3",
    "@types/react": "^16.9.43",
    "@types/react-dom": "^16.9.8",
    "@types/react-test-renderer": "^16.9.2",
    "@types/sinon": "^9.0.4",
    "@types/storybook__react": "^5.2.1",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "ava": "^3.10.1",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.1.0",
    "csstype": "^2.6.11",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.8",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "react-benchmark": "^2.1.1",
    "react-docgen-typescript-loader": "^3.7.2",
    "react-dom": "^16.13.1",
    "react-test-renderer": "^16.13.1",
    "sinon": "^9.0.2",
    "size-limit": "^4.5.4",
    "ts-node": "^8.10.2",
    "typescript": "^3.4.5",
    "webpack": "^4.43.0"
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:react/recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "project": "./tsconfig.json",
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "env": {
      "browser": true
    },
    "rules": {
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/indent": "off",
      "@typescript-eslint/member-delimiter-style": [
        "error",
        {
          "multiline": {
            "delimiter": "none",
            "requireLast": false
          },
          "singleline": {
            "delimiter": "comma",
            "requireLast": false
          }
        }
      ],
      "react/jsx-sort-props": [
        "error",
        {
          "callbacksLast": false,
          "shorthandFirst": false,
          "noSortAlphabetically": true,
          "reservedFirst": true
        }
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "size-limit": [
    {
      "path": "dist/src/index.js",
      "limit": "50 KB",
      "running": false,
      "gzip": false
    }
  ],
  "ava": {
    "require": [
      "ts-node/register/transpile-only",
      "./test/_setup.ts"
    ],
    "extensions": [
      "ts",
      "tsx"
    ]
  }
}
